<%- include('../includes/head.ejs') %>


        <% if (products.length > 0) { %>
            <%- include('../includes/navigation.ejs') %>
        </head>
        <body>
            <main>

            <div class="grid">
                <% for (let product of products) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.productData.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>" alt="<%= product.productData.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.productData.price %></h2>
                            <p class="product__description"><%= product.productData.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product.productData.id %>" class="btn">Details</a>
                            <form action="/delete-cart-item" method="POST">
                                <input type="hidden" name="productId" value="<%= product.productData.id %>">
                                <input type="submit" value="Delete" class="btn">
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <%- include('../includes/navigation.ejs') %>
<h1 >No products in cart</h1>
        <% } %>
    </main>


    <%- include('../includes/end.ejs') %>
</body>
